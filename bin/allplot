#! /bin/sh

if test "$2" = ""; then
  echo "usage: $0 <plotexpr> <directory-pattern> "
  exit 1
fi

PLOTTERM=$1
shift

for dir in "$@"; do
  id=${dir%-20??-??-??-??????} # remove timestamp
  id=${id#*-}
  cmdline="$cmdline $dir/2d.dat prefix $id: plot t_sim,$PLOTTERM"
done
exec logtool --legend-expr $cmdline
